@import "nib"
global-reset()

*
    box-sizing border-box

html, body
    width 100%
    height 100%

#video
    display block
    width 100%
    height 100%
    background-color #000

#overlay
    display flex
    justify-content center
    align-items center

    position fixed
    top 0
    left 0
    width 100%
    height 100%

    pointer-events none

    &.disabled
        display none

#pre
    line-height 1.2
    padding 2px 16px

    font-family Helvetica , "游ゴシック" , "Yu Gothic" , sans-serif
    font-size 32px
    color #fff

    background-color rgba(#fff, .3)
